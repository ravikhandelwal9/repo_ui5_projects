<mvc:View xmlns:form="sap.ui.layout.form"   xmlns="sap.m"
            xmlns:mvc="sap.ui.core.mvc"
            controllerName="wp.fin.payroll.controller.AddNewProduct">

<Page title="Add New Product">
    <headerContent>
    </headerContent>
    <content>
        <form:SimpleForm >
        <form:content>
            <Label text="Po#:"/><Input id="idEbeln1" width="100px" value="{ekkoExtModel>/ekkoExt/Ebeln}"/>
            <Label text="Land:"/><Input id="idLand" width="100px" value="{ekkoExtModel>/ekkoExt/Land}"/>
        </form:content>
        </form:SimpleForm>
    </content>
    <footer>
        <Toolbar >
        <ToolbarSpacer ></ToolbarSpacer>
        <Button text="Save"  type="Accept" icon="sap-icon://accept" press="onSave"/>
        <Button text="Clear"  type="Reject" icon="sap-icon://reject" press="onClear"/>
        </Toolbar>
    </footer>
</Page>

</mvc:View>