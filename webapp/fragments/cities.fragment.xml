<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
                        xmlns:core="sap.ui.core"
                        xmlns="sap.m">
            <Select items="{/cities}">
                <items>
                    <core:Item text="{name}" key="{name}"/>
                </items>
            </Select>
            <ComboBox items="{/cities}" >
                <items>
                    <core:Item text="{name}" key="{name}"/>
                </items>
            </ComboBox>
            <MultiComboBox items="{/cities}" width="40%">
                <items>
                    <core:Item text="{name}" key="{name}"/>
                </items>
            </MultiComboBox>
</core:FragmentDefinition>